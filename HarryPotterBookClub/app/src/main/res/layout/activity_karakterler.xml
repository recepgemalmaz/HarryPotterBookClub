<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Karakterler">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="362dp"
        android:layout_height="280dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toTopOf="@+id/karakterAdi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/karakterAdi"
        android:layout_width="257dp"
        android:layout_height="60dp"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:text="KarakterAdi"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/karakterOzellik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/karakterOzellik"
        android:layout_width="260dp"
        android:layout_height="53dp"
        android:layout_marginBottom="227dp"
        android:gravity="center"
        android:text="KarakterOzellik"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/karakterAdi" />
</androidx.constraintlayout.widget.ConstraintLayout>